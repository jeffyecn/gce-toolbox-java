<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{mm:ss} %-5level %logger{0} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.langcode" level="debug" />

    <root level="error">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>